@using DoreanSportic.Infrastructure.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="grid grid-cols-1 lg:grid-cols-2 shadow-lg p-2">

    <div class="flex flex-row gap-3 mb-3 justify-between">

        <!-- Ventas por día -->
        <div class="card bg-base-100 shadow-lg p-4">
            <h3 class="font-bold mb-2">Ventas por día</h3>
            <div class="flex gap-2 mb-2">
                <input id="ventas-dia-desde" type="date" class="input input-bordered" />
                <input id="ventas-dia-hasta" type="date" class="input input-bordered" />
                <button id="btn-filtrar-dia" class="btn btn-primary">Filtrar</button>
            </div>
            <!-- contenedor con altura fija -->
            <div class="relative h-56">
                <canvas id="chart-ventas-dia"></canvas>
            </div>
        </div>

        <!-- Ventas por mes -->
        <div class="card bg-base-100 shadow-lg p-4">
            <h3 class="font-bold mb-2">Ventas por mes</h3>
            <div class="flex gap-2 mb-2">
                <input id="ventas-mes-anio" type="number" class="input input-bordered w-32" placeholder="Año" />
                <button id="btn-filtrar-mes" class="btn btn-primary">Filtrar</button>
            </div>
            <!-- contenedor con altura fija -->
            <div class="relative h-56">
                <canvas id="chart-ventas-mes"></canvas>
            </div>
        </div>
    </div>

    <div class="flex flex-row gap-3 mb-3">

        <!-- Pedidos por estado -->
        <div class="card bg-base-100 shadow-lg p-4">
            <h3 class="font-bold mb-2">Pedidos por estado</h3>
            <!-- contenedor con altura fija -->
            <div class="relative h-56">
                <canvas id="chart-pedidos-estado"></canvas>
            </div>
        </div>

        <!-- Top 3 productos -->
        <div class="card bg-base-100 shadow-lg p-4 w-100">
            <h3 class="font-bold mb-2">Top 3 productos por ventas</h3>
            <div class="relative h-75">
                <canvas id="chart-top-productos"></canvas>
            </div>
        </div>

    </div>



    <!-- Últimas reseñas -->
    <div class="card bg-base-100 shadow-lg p-4 lg:col-span-2">
        <h3 class="font-bold mb-2">Reseñas más recientes</h3>
        <ul id="lista-resennas" class="space-y-2 gap-3"></ul>
    </div>

</div>


