@model IEnumerable<DoreanSportic.Application.DTOs.PedidoDTO>

@{
    ViewData["Title"] = "Index";
}

<h1 class="font-bold">Listado de pedidos</h1>
<br />

<div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
    <table class="table">
        <!-- head -->
        <thead class="bg-primary text-white">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Fecha del pedido</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Subtotal</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td class="font-bold text-center">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td class="text-center">
                        @item.FechaPedido.ToString("dd-MM-yyyy")
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.EstadoPedido)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.SubTotal)
                    </td>
                    <td>
                        @*                         @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
 *@@*                         @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
 *@                        <!-- Botón alineado abajo a la derecha -->
                        <div class="mt-auto flex justify-end">
                            <a class="btn btn-soft btn-primary text-white"
                               asp-action="Details" asp-route-id="@item.Id">Ver detalles</a>
                        </div>
                        @*                         @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
 *@                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


