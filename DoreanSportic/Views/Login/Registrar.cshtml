@model DoreanSportic.Web.ViewModels.RegistroViewModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = "_LayoutLogin";
}

<div class="hero bg-base-200 min-h-screen">
    <div class="hero-content flex-col lg:flex-row w-full">
        <div class="text-center lg:text-left max-w-xl">
            <h1 class="text-5xl font-bold">Crea tu cuenta</h1>
            <p class="py-6">
                Regístrate para comprar más rápido, ver tus pedidos y guardar tus datos de envío.
            </p>
        </div>

        <div class="card bg-base-100 w-full max-w-md shrink-0 shadow-2xl">
            <div class="card-body">
                @* Errores del modelo *@
                <div asp-validation-summary="ModelOnly" class="text-error mb-2"></div>

                @* Formulario de registro *@
                <form asp-action="Register" asp-controller="Login" method="post">
                    @Html.AntiForgeryToken()

                    @* Campos para registrar el usuario *@
                    <fieldset class="fieldset">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">

                            @* Campo nombre*@
                            <div>
                                <label class="label" asp-for="Nombre"></label>
                                <input class="input input-bordered" asp-for="Nombre" placeholder="Nombre" />
                                <span class="text-error text-sm" asp-validation-for="Nombre"></span>
                            </div>

                            @* Campo apellido*@
                            <div>
                                <label class="label" asp-for="Apellido"></label>
                                <input class="input input-bordered" asp-for="Apellido" placeholder="Apellido" />
                                <span class="text-error text-sm" asp-validation-for="Apellido"></span>
                            </div>
                        </div>

                        @* Campo correo electrónico*@
                        <label class="label mt-3" asp-for="Email"></label>
                        <input class="input input-bordered" asp-for="Email" type="email" placeholder="correo@ejemplo.com" />
                        <span class="text-error text-sm" asp-validation-for="Email"></span>

                        @* Campo teléfono *@
                        <label class="label mt-3" asp-for="Telefono"></label>
                        <input class="input input-bordered" asp-for="Telefono" placeholder="Teléfono" />
                        <span class="text-error text-sm" asp-validation-for="Telefono"></span>

                        @* Para crear el usuario y la contraseña *@
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mt-3">
                            <div>
                                <label class="label" asp-for="UserName"></label>
                                <input class="input input-bordered" asp-for="UserName" placeholder="Usuario" />
                                <span class="text-error text-sm" asp-validation-for="UserName"></span>
                            </div>
                            <div>
                                <label class="label" asp-for="Password"></label>
                                <input class="input input-bordered" asp-for="Password" type="password" placeholder="Contraseña" />
                                <span class="text-error text-sm" asp-validation-for="Password"></span>
                            </div>
                        </div>

                        @* Confirmación de contraseña*@
                        <label class="label mt-3" asp-for="ConfirmPassword"></label>
                        <input class="input input-bordered" asp-for="ConfirmPassword" type="password" placeholder="Confirmar contraseña" />
                        <span class="text-error text-sm" asp-validation-for="ConfirmPassword"></span>

                        @* Botón para crear cuenta*@
                        <button class="btn btn-neutral mt-4" type="submit">Crear cuenta</button>
                    </fieldset>
                </form>

                <hr />

                <p class="text-sm">
                    ¿Ya tienes cuenta?
                    <a class="link link-hover font-semibold" asp-controller="Login" asp-action="Login">Inicia sesión</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}