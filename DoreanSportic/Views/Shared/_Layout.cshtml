<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoreanSportic</title>

    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body class="bg-base-100 text-base-content min-h-screen flex flex-col">
    <header>
        <div class="navbar bg-neutral text-neutral-content shadow-md">
            <div class="container mx-auto px-4">
                <div class="flex-1">
                    <a class="btn btn-ghost normal-case text-xl" asp-area="" asp-controller="Home" asp-action="Index">DoreanSportic</a>
                </div>
                <div class="flex-none hidden md:flex space-x-4">
                    <a class="btn btn-ghost" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="btn btn-ghost" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </div>
    </header>

    <main role="main" class="flex-grow container mx-auto px-4 py-6">
        @RenderBody()
    </main>

    <footer class="footer footer-center p-4 bg-neutral text-neutral-content">
        <div>
            <p>&copy; 2025 - DoreanSportic - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="underline">Privacy</a></p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
