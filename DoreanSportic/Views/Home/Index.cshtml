            <!--Texto a mostrar en el slide-->
            <div class="absolute top-0 left-0 w-full h-full flex flex-col items-center justify-center text-white text-center z-20 px-4">
                <h1 class="italic" style="font-weight: 800; font-size: 250%; -webkit-text-stroke: 2px black; -webkit-text-fill-color: white;">
                    @*DOMINA LA CANCHA<br />CON CADA MOVIMIENTO *@
                    @(Localizer["Slide3Title"])
                </h1>
                <br />
                <a class="bg-[#004AAD] btn text-white" asp-area="" asp-controller="Producto" asp-action="Index">
                    @*VER PRODUCTOS*@
                    @Localizer["Slide3Button"]
                </a>
            </div>
        </div>
        <div id="slide4" class="carousel-item relative w-screen">
            <img src="~/Assets/football.jpg"
