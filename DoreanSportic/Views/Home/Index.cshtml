                <h1 class="italic" style="font-weight: 800; font-size: 250%; -webkit-text-stroke: 2px black; -webkit-text-fill-color: white;">
                    @* TODO COMIENZA CON UN PASO<br />HAZLO TUYO *@
                    @(Localizer["Slide2Title"])
                </h1>
                <br />
                <a class="bg-[#004AAD] btn text-white" asp-area="" asp-controller="Producto" asp-action="Index">
                    @*VER PRODUCTOS*@
                    @Localizer["Slide2Button"]
                </a>
            </div>

        </div>
        <div id="slide3" class="carousel-item relative w-screen">
            <video class="w-full h-full object-cover" autoplay muted loop>
